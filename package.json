{
  "name": "whac-a-mole",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "dependencies": {
    "express": "^4.14.0",
    "imagemin": "^5.2.2"
  },
  "devDependencies": {
    "autoprefixer": "^6.4.0",
    "browser-sync": "^2.14.0",
    "eslint": "^3.2.2",
    "imagemin-cli": "^3.0.0",
    "minimist": "^1.2.0",
    "node-sass": "^3.8.0",
    "nodemon": "^1.10.0",
    "npm-run-all": "^2.3.0",
    "path": "^0.12.7",
    "postcss-cli": "^2.5.2",
    "uglify-js": "^2.7.0"
  },
  "scripts": {
    "test": "echo \"error: no test specified\" && exit 1",
    "scss": "node-sass --output-style compressed -o dist/css src/style",
    "autoprefixer": "postcss -u autoprefixer -r dist/css/*",
    "uglify": "mkdir -p dist/js && uglifyjs src/js/*.js -m -o dist/js/index.js",
    "serve": "browser-sync start --server --files 'dist/css/*.css, dist/js/*.js'",
    "build:all": "npm run scss && npm run autoprefixer && npm run uglify",
    "watch:css": "onchange 'src/style/*.scss' -- npm run build:css",
    "watch:js": "onchange 'src/js/*.js' -- npm run build:js",
    "watch:all": "npm-run-all -p serve watch:css watch:js",
    "dev": "npm run build:all && npm run watch:all"
  },
  "author": "",
  "license": "ISC"
}
